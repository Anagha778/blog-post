{{#if posts.length}}
<section>
  <h3>Your Posts</h3>
  
    {{#each posts as |post|}}
    
      <article class="post">
        <div class="title card">
          <div class="card-header">
             <a href="/dashboard/edit/{{post.id}}" class="card-title" style="font-size: 20px;">{{title}}</a>
          </div>
          <div class="card-body">
            <p class="card-text" style="font-size: 15px;">{{contents}}</p>
          </div> 
          <div class="meta card-footer" style="font-size: small;">
            Posted by {{user.username}} on {{format_date created_at}}      
          </div>
        </div>
      </article>
     
    {{/each}}
  
</section>
{{/if}}

<div>
  <a href="/dashboard/add"><button type="button" class="button newpost-btn">New Post</button></a>
</div>

