<article class="post">
  <div class="title card">
    <div class="card-header">
      <h5 class="card-title" style="font-size: 20px;">{{title}}</h5>
    </div>
    <div class="card-body">
      <p class="card-text" style="font-size: 15px;">{{contents}}</p>
    </div> 
    <div class="meta card-footer" style="font-size: small;">
      Posted by {{user.username}} on {{format_date created_at}}      
    </div>
  </div>
</article>